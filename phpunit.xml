<phpunit bootstrap="src/autoload.php">
  <testsuites>
    <testsuite name="main">
      <directory>tests</directory>
    </testsuite>
  </testsuites>
  <logging>
    <log type="coverage-html" target="./coverage" />
  </logging>
  <filter>
    <whitelist>
      <directory suffix=".php">src/</directory>
      <exclude>
        <file>src/autoload.php</file>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
